class Solution {
    public int reverse(int x) {

        int temp = Math.abs(x);
        int sum=0;

        while(temp>0)
        {
            int rem = temp%10;
            if (sum > (Integer.MAX_VALUE - rem) / 10) {
                return 0;
            }
            sum = sum * 10 + rem;
            temp = temp/10;
        
        }

        if(x < 0)
        {
            sum =  -sum;
        }


       

        return sum;
    }
}
