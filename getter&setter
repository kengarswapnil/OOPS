class Main {
    public static void main(String[] args) {
        Pen p = new Pen();
        p.setcolor("blue");
        System.out.println(p.getcolor());
        
        //trip
        p.settrip(4);
        System.out.println(p.gettrip());
        
    }
}

class Pen{
    private String color;
    private int trip;
    
    String getcolor()
    {
        return this.color;
    }
    
    int gettrip(){
        return this.trip;
    }
    
    void setcolor(String newcolor)
    {
        this.color = newcolor;
    }
    
    void settrip(int newtrip)
    {
        trip=newtrip;
    }
}
