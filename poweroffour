class Main {
    public static boolean poweroffour(int n)
    {
        int k = 0;
        
        if(n<=0)
        {
            return false;
        }
        else if(n==1)
        {
            return true;
            
        }
        else{
            for(int i=0;i<n;i++)
            {
                k=k+n%4;
                n=n/4;
                if(k!=0)
                {
                    return false;
                }
            }
        }
        
        if(k==0)
        {
            return true;
        }else{
            return false;
        }
    }
    public static void main(String[] args) {
        int n = 17;
        System.out.println(poweroffour(n));
       
    }
}
